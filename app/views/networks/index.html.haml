- @page_title = "Networks"

%ol.breadcrumb
  %li= link_to "Home", controller: 'access', action: 'index'
  %li.active Networks

%p
  = link_to("Add new network", { action: 'new' }, class: 'btn btn-default btn-sm', role: 'button')

%table.table
  %tr
    %th Name
    %th Action

  - @networks.each do |network|
    %tr
      %td= network.name
      %td
        =link_to "Show", action: :show, id: network.id
        |
        =link_to "Edit", action: :edit, id: network.id
        |
        =link_to "Delete", action: :destroy, id: network.id, method: :delete, data: { confirm: 'Delete selected record?' }
